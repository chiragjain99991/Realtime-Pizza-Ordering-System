<% layout('../layouts/boilerplate2') %>

    <body style="background-repeat:no-repeat; background-size:cover;background-image:url('https://images.unsplash.com/photo-1523982440192-e61efd063acb?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1116&q=80')">
        <center>
            
            <div class="card loginCard">
                <div style="margin-top: 15%;"></div>
                <div class="card-body">
                    <h5 class="card-title" style="color: rgb(88, 4, 70);font-size: 32px;font-weight: 700;">ADD PIZZA</h5>
                    <hr class="solid" style="width: 100%; height: 2px; background-color:rgb(61, 5, 5)">
                    <form action="/addpizza/<%= currentUser._id %>" method="POST">
                        <div class="mb-3" style="text-align: start">
                            <label for="name" class="col-sm-10 col-form-label" style="color: rgb(48, 2, 49);text-align: start;font-size: 20px;">Name</label>
                            <div class="col-sm-12">
                                <input required name="name" type="text"
                                style="border: 3px solid rgb(38, 1, 39);font-size: 17px;font-weight: 400;outline: none;box-shadow: none;"
                                    class="form-control" id="name" placeholder="Enter name">
                            </div>
                        </div>

                        <div class="mb-3" style="text-align: start">
                            <label for="image" class="col-sm-10 col-form-label" style="color: rgb(48, 2, 49);text-align: start;font-size: 20px;">Image</label>
                            <div class="col-sm-12">
                                <input required name="image" type="text"
                                style="border: 3px solid rgb(38, 1, 39);font-size: 17px;font-weight: 400;outline: none;box-shadow: none;"
                                    class="form-control" id="image" placeholder="Enter Image">
                            </div>
                        </div>

                        <div class="mb-3" style="text-align: start">
                            <label for="size" class="col-sm-10 col-form-label" style="color: rgb(48, 2, 49);text-align: start;font-size: 20px;">Size</label>
                            <div class="col-sm-12">
                                <input required name="size" type="text"
                                style="border: 3px solid rgb(38, 1, 39);font-size: 17px;font-weight: 400;outline: none;box-shadow: none;"
                                    class="form-control" id="size" placeholder="Enter Size">
                            </div>
                        </div>

                        <div class="mb-3" style="text-align: start">
                            <label for="price" class="col-sm-10 col-form-label" style="color: rgb(48, 2, 49);text-align: start;font-size: 20px;">Price</label>
                            <div class="col-sm-12">
                                <input required name="price" type="text"
                                style="border: 3px solid rgb(38, 1, 39);font-size: 17px;font-weight: 400;outline: none;box-shadow: none;"
                                    class="form-control" id="price" placeholder="Enter Price">
                            </div>
                        </div>


                        <!-- <div class="mb-3" style="text-align: start">
                            <label for="inputPassword" class="col-sm-5 col-form-label"
                            style="color: rgb(48, 2, 49);text-align: start;font-size: 20px;">Password</label>
                            <div class="col-sm-12">
                                <input required type="password" class="form-control"
                                 id="inputPassword" name="password"
                                 style="border: 3px solid rgb(38, 1, 39);font-size: 17px;font-weight: 300;outline: none;box-shadow: none;"
                                 placeholder="Enter Password"
                                    >
                            </div>

                        </div> -->
                        <br />
                        <button class="btn btn-primary"
                            style=" margin-bottom:10%; background-color: rgb(46, 2, 42); width: 93%;color: whitesmoke;font-size: 20px;font-weight: 600;border: none;outline: none;box-shadow: none;">ADD PIZZA</button>
                    </form>
                </div>
            </div>
        </center>

    </body>